@model DNU.IdeaSpark.Models.ViewModels.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = null;
}

<style>
    body {
        background: url('/images/background-login.jpg') no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh;
        margin: 0;
        font-family: 'Segoe UI', Arial, sans-serif;
    }
    .glassy-forgot-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .glassy-forgot-card {
        background: rgba(255,255,255,0.13);
        border-radius: 18px;
        box-shadow: 0 8px 32px 0 rgba(31,38,135,0.37);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        padding: 34px 38px 26px 38px;
        width: 100%;
        max-width: 370px;
        color: #fff;
        border: 1.5px solid rgba(255,255,255,0.18);
    }
    .glassy-forgot-title {
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 22px;
        letter-spacing: 1px;
        color: #fff;
        text-shadow: 0 1px 12px #0002;
    }
    .form-group {
        margin-bottom: 18px;
        text-align: left;
    }
    .glassy-forgot-card label {
        color: #fff;
        font-weight: 500;
        margin-bottom: 6px;
        display: block;
    }
    .glassy-forgot-card .form-control {
        border-radius: 10px;
        padding: 12px 16px;
        background: rgba(255,255,255,0.25);
        border: 1.2px solid rgba(255,255,255,0.18);
        font-size: 1.08rem;
        color: #222;
        margin-bottom: 10px;
        width: 100%;
        box-sizing: border-box;
    }
    .glassy-forgot-card .form-control:focus {
        background: #fff;
        outline: none;
    }
    .glassy-btn {
        width: 100%;
        background: #3871f3;
        color: #fff;
        font-weight: 600;
        border: none;
        padding: 13px 0;
        border-radius: 10px;
        font-size: 1.09rem;
        margin-top: 8px;
        transition: background .2s;
        box-shadow: 0 2px 10px #3871f325;
    }
    .glassy-btn:hover {
        background: #2553b8;
    }
    .glassy-link {
        color: #b9e1ff;
        text-decoration: none;
        font-weight: 500;
        display: block;
        text-align: center;
        margin-top: 14px;
        font-size: 1rem;
        transition: text-decoration 0.15s;
    }
    .glassy-link:hover {
        text-decoration: underline;
    }
    .validation-message {
        color: #ffd1d1;
        font-size: 0.95rem;
        margin-bottom: 4px;
        font-weight: 500;
        display: block;
    }
    @@media (max-width: 600px) {
        .glassy-forgot-card { padding: 16px 5px; }
        .glassy-forgot-title { font-size: 1.2rem; }
    }
</style>

<div class="glassy-forgot-container">
    <div class="glassy-forgot-card">
        <div class="glassy-forgot-title">Quên mật khẩu?</div>
        <form asp-action="ForgotPassword" method="post" novalidate>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email trường đã đăng" autocomplete="username" />
                <span asp-validation-for="Email" class="validation-message"></span>
            </div>
            <button type="submit" class="glassy-btn">Gửi yêu cầu</button>
        </form>
        <a asp-action="Login" class="glassy-link">Quay lại đăng nhập</a>
    </div>
</div>
