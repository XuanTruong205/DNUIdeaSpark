@model DNU.IdeaSpark.Models.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = null; // Không dùng layout chung cho trang này
}
<style>
    body {
        background: url('/images/background-login.jpg') no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh;
        margin: 0;
        font-family: 'Segoe UI', Arial, sans-serif;
    }
    .glassy-register-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .glassy-register-card {
        background: rgba(255,255,255,0.13);
        border-radius: 18px;
        box-shadow: 0 8px 32px 0 rgba(31,38,135,0.37);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        padding: 36px 38px 22px 38px;
        width: 100%;
        max-width: 370px;
        color: #fff;
        border: 1.5px solid rgba(255,255,255,0.18);
        display: flex;
        flex-direction: column;
        gap: 8px;
    }
    .glassy-register-title {
        font-size: 2.05rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 18px;
        letter-spacing: 1px;
        color: #fff;
        text-shadow: 0 1px 12px #0002;
    }
    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 15px;
    }
    .glassy-register-card label {
        color: #fff;
        font-weight: 500;
        margin-bottom: 6px;
        font-size: 1rem;
        padding-left: 2px;
    }
    .glassy-register-card .form-control {
        border-radius: 10px;
        padding: 12px;
        background: rgba(255,255,255,0.25);
        border: 1.2px solid rgba(255,255,255,0.22);
        font-size: 1.08rem;
        color: #222;
        margin-bottom: 0;
        outline: none;
        transition: background .2s, border .2s;
    }
    .glassy-register-card .form-control:focus {
        background: #fff;
        border-color: #3871f3;
    }
    .validation-message {
        color: #ffd1d1;
        font-size: 0.97rem;
        margin-top: 2px;
        margin-left: 2px;
        font-weight: 500;
        min-height: 20px;
    }
    .glassy-btn {
        width: 100%;
        background: #3871f3;
        color: #fff;
        font-weight: 600;
        border: none;
        padding: 12px;
        border-radius: 10px;
        font-size: 1.09rem;
        margin-top: 5px;
        transition: background .2s;
        box-shadow: 0 2px 10px #3871f325;
    }
    .glassy-btn:hover {
        background: #2553b8;
    }
    .glassy-footer {
        text-align: center;
        margin-top: 18px;
        color: #fff;
        font-size: .97rem;
    }
    .glassy-link {
        color: #98d7fa;
        text-decoration: none;
        font-weight: 500;
        margin-left: 4px;
    }
    .glassy-link:hover {
        text-decoration: underline;
    }
    @@media (max-width: 600px) {
        .glassy-register-card { padding: 15px 4px; }
        .glassy-register-title { font-size: 1.25rem; }
    }
    .auth-card .form-control {
        color: #fff !important;
    }

</style>

<div class="glassy-register-container">
    <div class="glassy-register-card">
        <div class="glassy-register-title">Đăng ký tài khoản DNU IdeaSpark</div>
        <form asp-action="Register" method="post" novalidate>
            <div class="form-group">
                <label asp-for="Email">Email Đại học Đại Nam</label>
                <input asp-for="Email" class="form-control" placeholder="VD: yourname@dnu.edu.vn" />
                <span asp-validation-for="Email" class="validation-message"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name">Họ và tên</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập họ tên" />
                <span asp-validation-for="Name" class="validation-message"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <select asp-for="Department" class="form-control">
                    <option value="">-- Chọn khoa/đơn vị --</option>
                    <option>Khoa Công nghệ Thông tin</option>
                    <option>Khoa Kinh tế</option>
                    <option>Khoa Ngôn ngữ</option>
                    <option>Khoa Điều dưỡng</option>
                    <!-- Thêm nữa tùy bạn -->
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu mạnh (ít nhất 6 ký tự)" />
                <span asp-validation-for="Password" class="validation-message"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Nhập lại mật khẩu</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" />
                <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
            </div>
            <button type="submit" class="glassy-btn">Đăng ký</button>
        </form>
        <div class="glassy-footer">
            Đã có tài khoản?
            <a asp-action="Login" class="glassy-link">Đăng nhập</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
