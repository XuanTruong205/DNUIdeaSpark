@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - DNU IdeaSpark Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap">
    <style>
        body { font-family: 'Inter', sans-serif; background: #f9fafc; }
        .admin-bg {
            background: linear-gradient(90deg, #1953a3 70%, #1260b3 100%);
            color: #fff !important;
            border-bottom: 2px solid #174388;
        }
        .admin-link {
            color: #e3e9f3 !important;
            font-weight: 500;
            font-size: 1.09rem;
            border-radius: 6px;
            transition: background 0.18s, color 0.16s;
            padding: 6px 14px !important;
            display: flex;
            align-items: center;
            gap: 6px;
        }
        .admin-link:hover, .navbar .nav-link.active {
            background: rgba(255,255,255,0.11) !important;
            color: #ffd600 !important;
            text-decoration: none;
        }
        .navbar-brand {
            letter-spacing: 1px;
            font-size: 1.6rem;
        }
        .navbar-brand span {
            font-size: 1rem;
            font-weight: 500;
            margin-left: 4px;
        }
        @@media (max-width: 992px) {
            .navbar-brand { font-size: 1.2rem; }
            .admin-link { font-size: 1rem; }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg admin-bg shadow-sm" style="padding:0;">
        <div class="container py-2">
            <a class="navbar-brand fw-bold d-flex align-items-center gap-2 text-white" href="/Admin/IdeaModeration/Index">
                <i class="bi bi-gear-wide-connected"></i> DNU IdeaSpark <span>Admin</span>
            </a>
            <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="adminNav">
                <ul class="navbar-nav gap-1">
                    <li class="nav-item">
                        <a class="nav-link admin-link" href="/Admin/IdeaModeration/Index">
                            <i class="bi bi-lightbulb-fill"></i> Quản lý ý tưởng
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link admin-link" href="/Report">
                            <i class="bi bi-bar-chart-line-fill"></i> Báo cáo nhanh
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link admin-link" href="/Admin/CategoryManagement/Index">
                            <i class="bi bi-tags-fill"></i> Danh mục
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link admin-link" href="/Admin/UserManagement/Index">
                            <i class="bi bi-people-fill"></i> Người dùng
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav gap-2 align-items-center">
                    <li class="nav-item">
                        <span class="nav-link text-white">
                            <i class="bi bi-person-circle"></i>
                            Xin chào, <span style="font-weight:600">@User.Identity.Name</span>
                        </span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold d-flex align-items-center gap-1" href="/Admin/AdminLogin/Logout">
                            <i class="bi bi-box-arrow-right"></i> Đăng xuất
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="container">
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </main>
</body>
</html>
